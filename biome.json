{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": ["app/**", "scripts/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true,
        "useKeyWithClickEvents": "off"
      },

      "complexity": {
        "noUselessCatch": "warn",
        "noUselessFragments": "off",
        "noImportantStyles": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "patterns": [
              {
                "group": [
                  "~/features/*/**",
                  "**/features/*/**",
                  "!~/features/*/client/index",
                  "!~/features/*/client",
                  "!~/features/*/server",
                  "!~/features/*/isom",
                  "!~/features/*/isomorphic"
                ],
                "message": "Deep import 금지: feature 배럴(index)로만 import 하세요."
              }
            ]
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noEmptyInterface": "off",
        "noUnknownAtRules": "off"
      }
    }
  }
}
