enum JobTitle {
  CHAIRMAN      // íšŒì¥
  VICE_CHAIRMAN // ë¶€íšŒì¥
  DIRECTOR      // ê°ë…
  COACH         // ì½”ì¹˜
  OPERATOR      // ìš´ì˜
