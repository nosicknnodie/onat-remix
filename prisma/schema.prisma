  FEMALE  // ì—¬ì
}


model ConfirmToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime
  type  TokenType @default(VERIFICATION)
  @@unique([email, token, type])
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Key {
  id              String  @id
  hashedPassword String?
  userId          String
  user            User    @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@unique([id])
} 


model Club {
  id            String    @id @default(cuid())
  name          String    // í´ëŸ½ ì´ë¦„
  description   String?   @db.Text
  si            String?   // ë„ì‹œ
